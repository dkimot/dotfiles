layout {
  pane split_direction="vertical" {
    pane split_direction="horizontal" size="30%" {
      pane name="terminal"

      pane size="25%" {
        start_suspended true
        command "mix"
        args "phx.server"
      }
    }

    pane command="nvim" borderless=true {
      focus true
    }
  }

  pane size=1 borderless=true {
    plugin location="zellij:compact-bar"
  }
}
